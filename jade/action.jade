									.actions-timer__count-item.is-hours
										.actions-timer__numbers 0
										.actions-timer__numbers 8
										.actions-timer__numbers-name часов
									.actions-timer__count-item.is-minutes
										.actions-timer__numbers 1
										.actions-timer__numbers 5
										.actions-timer__numbers-name минут
									.actions-timer__count-item.is-seconds
										.actions-timer__numbers 2
										.actions-timer__numbers 7
										.actions-timer__numbers-name секунд


					section.catalog-sections-wrap
						include blocks/_plate-block-actions
					include blocks/_catalog-filter
					include blocks/_catalog-controls
					.catalog-products-wrap.fw
						include includes/_products-list-actions
					.page-btn-block.is-show-more
						a.page-btn-block__btn.btn.is-orange(href="#") Показать еще
					include blocks/_pagination-arrows-hide
		section.footer.fl
			include includes/_footer











