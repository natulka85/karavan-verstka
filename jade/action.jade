						.page-header-main__side
							.actions-timer
								.actions-timer__data-info
									.actions-timer__data.main-date.icon-calendar
										span 10.11.2017-20.12.2017
									.page-header-main__label-block.label-block
										.label-block__label.is-orange
											span Акция действует
								.actions-timer__count
									.actions-timer__count-item.is-days
										.actions-timer__numbers 1
										.actions-timer__numbers 0
