extends layouts/_base-layoute.jade

block PageTitle
	title Catalog-1


block PageLayout
	section.base-content.inner-width.fw
		section.header
			include blocks/_header-top
			include blocks/_header-menu
			include blocks/_basket-small
		section.main-content.fw
			section.sidebar-bar
				include blocks/_main-search
				include includes/_left-menu.jade
				include blocks/_left-banner
				include blocks/_left-news
				include blocks/_left-reviews


			section.main-content-inner.fw
				.actions-page__wrap
					include blocks/_page-header
					section.page-header-main
						.page-header-main__side
							h1.page-header-main__title Статуэтки и фигурки животных оптом
							.page-header-main__info Индия для всех представляется яркой и сказочной страной, где всегда светит солнце, а девушки ходят в ярких сари, привлекающих внимание. Чтобы стать обладателем сувенира из Индии, теперь не нужно ехать в эту страну.
						.page-header-main__side
							.page-header-main__label-block.label-block
								.label-block__label.is-orange
									span Раздел участвует в акции!
								.label-block__label.is-orange
									span -20%
					section.catalog-sections-wrap
						include blocks/_plate-block-actions
					include blocks/_catalog-filter
					include blocks/_catalog-controls
					.catalog-products-wrap.fw
						include includes/_products-list-actions
					include blocks/_pagination
		section.footer.fl
			include includes/_footer











